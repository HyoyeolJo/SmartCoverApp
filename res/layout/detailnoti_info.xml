<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/layout_bg_red"
    >
    
    <LinearLayout
        android:id="@+id/msg_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
	    <ImageView
	        android:id="@+id/notification_icon1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_launcher"
	        android:layout_weight="2"
	        android:layout_gravity="center"
	        />
	    
	    <TextView
	        android:id="@+id/messageSender2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_toRightOf="@id/notification_icon1"
	        android:layout_weight="3.25"
	        android:text="발신자"
	        android:textColor="#ffffff"
	        android:textSize="15sp" />

	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="5"
	        android:orientation="vertical"
	        android:gravity="right|center"
	        android:layout_gravity="center"
	        >
	    	<TextView
		       	android:layout_toRightOf="@id/messageSender2"
		        android:id="@+id/messageTime3"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="AM 3: 39"
		        android:textSize="15sp"
		        android:textColor="#ffffff"
		        android:textAlignment="center"
		        android:layout_marginRight="10dp"
	        />    
	    </LinearLayout>
	    
    </LinearLayout>
    <TextView
        android:layout_below="@id/msg_info"
        android:id="@+id/messageContent4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="메시지 내용 표시"
        android:ellipsize="end"
        android:minLines="2"
        android:maxLines="3"
        android:textSize="15sp"
        android:textColor="#ffffff"
        />

    


</RelativeLayout>
