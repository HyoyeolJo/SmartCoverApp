<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    

    
    <RelativeLayout 

        android:id="@+id/music_play_component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
	            
	    <ImageView 
	        android:id="@+id/music_before"
	        android:layout_marginTop="17dp"
	        android:layout_marginLeft="25dp"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/before_button"
	        />

	   	    
	    <ImageView 
	        android:layout_marginTop="17dp"
	        android:layout_marginLeft="135dp"
	        android:id="@+id/music_next"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/next_button"
	        />     
	        <FrameLayout 
	            android:id="@+id/playLayout"
	        	android:layout_marginLeft="75dp"
				android:layout_marginTop="23dp"    
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            >
	            
	            <ImageView 
	                android:id="@+id/music_play_background"
	                android:layout_width="90dp"
	                android:layout_height="90dp"
	                android:src="@drawable/playbackground"
	                android:layout_gravity="center"
	                android:visibility="invisible"
	                />
	            
			    <ImageView 

			        android:id="@+id/music_play"
			        android:layout_width="80dp"
			        android:layout_height="80dp"
			        android:src="@drawable/playbutton"
			        android:layout_gravity="center"
			        />
	    
	       </FrameLayout>

	        
    </RelativeLayout>
    
    
    <ListView

        android:layout_below="@id/music_play_component"
        android:id="@+id/music_album_list" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        />


</RelativeLayout>
