<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#000000"
    >
    
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/music_album_noti"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_cd"
        />
    
    <LinearLayout
        android:id="@+id/album_info_noti"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/music_album_noti"
        android:orientation="vertical" >

	    <TextView
	        android:singleLine="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="IRonMan Cover Music"
	        android:textSize="9sp"
	        android:textColor="#ffffff"
	        />
	    <TextView
	        android:singleLine="true"
	        android:id="@+id/music_noti_song"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="한번더 말해줘"
	        android:textSize="14sp"
	        android:textColor="#ffffff"
	        android:ellipsize="marquee"
			android:marqueeRepeatLimit ="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:duplicateParentState="true"
            >
	        <requestFocus
	        android:duplicateParentState="true"
	        android:focusable="true"
	        android:focusableInTouchMode="true" />
	        
	        </TextView>
	    <TextView
	        android:singleLine="true"
	    	android:id="@+id/music_noti_singer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="지누션"
	        android:textSize="11sp"
	        android:textColor="#ffffff"
	        android:ellipsize="marquee"   

	        >
	        <requestFocus
	        android:duplicateParentState="true"
	        android:focusable="true"
	        android:focusableInTouchMode="true" />
	        </TextView>
        
    </LinearLayout>
    
    
    <RelativeLayout 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/music_noti_layout"
        android:layout_toRightOf="@id/album_info_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

	    <ImageView
	        android:id="@+id/music_before_play_noti"
	        android:layout_width="35dp"
	        android:layout_height="40dp"
	        android:src="@drawable/before_noti_music_button"
	        android:textColor="#000000"
	        />
	    <ImageView
	        android:layout_toRightOf="@id/music_before_play_noti"
	        android:id="@+id/music_noti_play"
	        android:src="@drawable/stopbutton"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:textColor="#000000"
	        />
	    <ImageView
	        android:layout_toRightOf="@id/music_noti_play"
	        android:id="@+id/music_next_play_noti"
	        android:layout_width="35dp"
	        android:layout_height="40dp"
	        android:src="@drawable/next_noti_music_button"
	        android:textColor="#000000"
	        />
    	<ImageView
    	    android:layout_alignParentRight="true"
	        android:layout_toRightOf="@id/music_next_play_noti"
	        android:id="@+id/music_stop_noti"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="2dp"
	        android:layout_width="27dp"
	        android:layout_height="27dp"
	        android:src="@drawable/stop_noti_music_button"
	        android:textColor="#000000"
	        />
	</RelativeLayout>
</RelativeLayout>
