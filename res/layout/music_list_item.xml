<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
            
    <RelativeLayout 
        android:id="@+id/music_select_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_red"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView 
            android:id="@+id/music_title_name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Over the Horizon"
            android:textColor="#0ff0df"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:textSize="20sp"
            />
        <TextView 
            android:layout_below="@id/music_title_name"
            android:layout_centerHorizontal="true"
            android:id="@+id/music_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true" 
            android:textSize="15sp"
            />       
            </RelativeLayout> 
            
        <ImageView 
            android:id="@+id/albumImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@id/music_select_info"
            android:src="@drawable/icon_cd"
            android:layout_centerHorizontal="true"
            />
</RelativeLayout>
